    <h3 class="description col-md-12">
        Create your Coder Profile
    </h3>
</div>


{{!-- BELOW IS WHERE WE INSERT BLOCK INFORMATION --}}
    <div class="create row container-fluid col-md-12">
        <h2 class="description">Create Your Profile</h2>
        <form class="create col-md-12">
            <div class="form-group col-md-6">
                <label for="exampleInputFirst">First Name</label>
                <input type="text" class="form-control" id="first-input" placeholder="Rubby">
            </div>
            <div class="form-group col-md-6">
                <label for="exampleInputLast">Last Name</label>
                <input type="text" class="form-control" id="last-input" placeholder="Raccoonerson">
            </div>
            <div class="form-group col-md-12">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="email-input" placeholder="Email">
            </div>
            <div class="form-group" class="col-md-10">
                <label for="sel1">Primary Technology</label>
                <select class="form-control" id="profile1">
                    <option>Frontend</option>
                    <option>Backend</option>
                    <option>UI/UX</option>
                    <option>Design</option>
                </select>
            </div>
            <div class="form-group" class="col-md-12">
                <label for="sel1">Secondary Technology</label>
                <select class="form-control" id="profile2">
                    <option>Frontend</option>
                    <option>Backend</option>
                    <option>UI/UX</option>
                    <option>Design</option>
                    <option>None</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label for="exampleExperience">Years of Experience</label>
                <input type="number" class="form-control" id="experience-input" placeholder="2">
            </div>
            <div class="form-group col-md-4">Education Level
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="bootcamp-choice"
                        value="option1">
                    <label class="form-check-label" for="inlineRadio1">Bootcamp</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="bachelors-choice"
                        value="option2">
                    <label class="form-check-label" for="inlineRadio2">University</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="self-taught-choice"
                        value="option4">
                    <label class="form-check-label" for="inlineRadio3">Self-Taught</label>
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="exampleInputGithub">Github Username</label>
                <input type="text" class="form-control" id="github-input" placeholder="rubbythecoder">
            </div>
            <div class="row col-md-12">
                <button type="submit" class="btn btn-warning submit">Submit</button>
            </div>
        </form>
    </div>

